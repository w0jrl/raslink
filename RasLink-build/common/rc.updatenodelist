# Script Start
TOPDOMAIN="pttlink.org"
SUBDOMAINS="nodes1 nodes2 nodes3 nodes4"
FILEPATH="/tmp"
WGET="command wget"
CP="command cp"
MV="command mv"
RM="command rm"
CHMOD="command chmod"
GREP="command grep"
CAT="command cat"
DATE="command date"
#
# Diagnostics
dry_run=0
verbose=0
#
downloads=0
retries=0
while [ 1 ]; do
    for i in $SUBDOMAINS; do
        res=0
        while [ $res = "0" ]; do
            $WGET -q -O /tmp/rpt_extnodes-temp http://$i.$TOPDOMAIN/cgi-bin/nodes.pl
            res=$?
            if [ $res = "0" ]; then
                $GREP -q extnodes /tmp/rpt_extnodes-temp
            if [ $? = "0" ]; then
                downloads=$((downloads+1))
                retries=0
            if [ $dry_run = "0" ]; then
                $CHMOD 700 /tmp/rpt_extnodes-temp
                $MV -f $FILEPATH/rpt_extnodes-temp $FILEPATH/rpt_extnodes
            else
                $CAT /tmp/rpt_extnodes-temp
            fi
            if [ $verbose -ne 0 ]; then
                echo "Retrieved node list from $i.$TOPDOMAIN"
                $DATE
            fi
            if [ $downloads -gt 100 ]; then
                downloads=0
                sleep 2m
                break; # Don't dwell on one server, Look for a new server
            fi
            if [ $dry_run = "0" ]; then
                sleep 2m
            else
                sleep 5s
            fi
            else
            if [[ $verbose != "0" ]]; then
                echo "Retreived garbage node list from $i.$TOPDOMAIN"
                echo "Moving to next node server in list..."
            fi
            $RM -f /tmp/rpt_extnodes-temp			
            downloads=0
            retries=$((retries+1))
            if [[ $retries > 100 ]]; then
                sleep 15m # doze for 15 min to lighten network load
            else
                sleep 30s
            fi
                break
            fi
            else
                $RM -f /tmp/rpt_extnodes-temp
            if [[ $verbose != "0" ]]; then
                echo "Problem retrieving node list from $i.$TOPDOMAIN, trying another server"
                downloads=0
                retries=$((retries+1))
            fi
            if [ $verbose = "0" ]; then
                if [[ $retries > "100" ]]; then
                    sleep 15m # doze for 15 min to lighten network load
                else
                    sleep 30s
                fi
            else
                sleep 5s
            fi
                break
            fi
        done
    done
done
