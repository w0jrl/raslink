# Script Start
online=0
ntp="command ntpdate"
server="pool.ntp.org"
netcheck() {
    wget -q --spider http://1.1.1.1
    if [[ "$?" > "0" ]]; then
        online=0
        sleep 5s
    else
        online=1
    fi
}
timesync() {
    ${ntp} ${server}
    if [[ "$?" = "1" ]]; then
        online=0
    else
        sleep 1h
    fi
}
while netcheck; do
    if [[ ${online} = "1" ]]; then
        timesync
    fi
done
